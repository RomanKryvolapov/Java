<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonManual"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@drawable/button_style_1"
            android:gravity="center"
            android:text="@string/app_field_1"
            android:textAllCaps="false"
            android:textColor="@color/colorTextWhite"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center|start"
            android:hint="@string/app_field_2"
            android:inputType="text"
            android:shadowColor="@color/colorTextWhite"
            android:singleLine="true"
            android:textColor="@color/colorTextBlack"
            android:textColorHighlight="@color/colorTextWhite"
            android:textColorHint="@color/colorTextWhite"
            android:textColorLink="@color/colorTextWhite"
            android:textCursorDrawable="@color/colorTextWhite"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center|start"
            android:hint="@string/app_field_8"
            android:inputType="text"
            android:shadowColor="@color/colorTextWhite"
            android:singleLine="true"
            android:textColor="@color/colorTextBlack"
            android:textColorHighlight="@color/colorTextWhite"
            android:textColorHint="@color/colorTextWhite"
            android:textColorLink="@color/colorTextWhite"
            android:textCursorDrawable="@color/colorTextWhite"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center|start"
            android:hint="@string/app_field_7"
            android:inputType="text"
            android:shadowColor="@color/colorTextWhite"
            android:singleLine="true"
            android:textColor="@color/colorTextBlack"
            android:textColorHighlight="@color/colorTextWhite"
            android:textColorHint="@color/colorTextWhite"
            android:textColorLink="@color/colorTextWhite"
            android:textCursorDrawable="@color/colorTextWhite"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center|start"
            android:hint="@string/app_field_3"
            android:inputType="text"
            android:shadowColor="@color/colorTextWhite"
            android:singleLine="true"
            android:textColor="@color/colorTextBlack"
            android:textColorHighlight="@color/colorTextWhite"
            android:textColorHint="@color/colorTextWhite"
            android:textColorLink="@color/colorTextWhite"
            android:textCursorDrawable="@color/colorTextWhite"
            android:textSize="10sp" />

        <Spinner
            android:id="@+id/spinnerSavedURL"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@drawable/button_style_1"
                android:gravity="center"
                android:text="@string/app_field_delete"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@drawable/button_style_1"
                android:gravity="center"
                android:text="@string/app_field_save"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonUse"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@drawable/button_style_1"
                android:gravity="center"
                android:text="@string/app_field_use"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonOpen"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@drawable/button_style_1"
                android:gravity="center"
                android:text="@string/app_field_open"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1.5"
                android:gravity="center|end"
                android:text="@string/app_field_10"
                android:textColor="@color/colorTextBlack"
                android:textSize="10sp" />

            <Spinner
                android:id="@+id/spinnerFields"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonLoadField"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1.5"
                android:background="@drawable/button_style_1"
                android:gravity="center"
                android:text="@string/app_load_fiels"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="3"
                android:gravity="center|end"
                android:text="@string/app_field_value"
                android:textColor="@color/colorTextBlack"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textViewField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="24dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1.5"
                android:gravity="center|end"
                android:text="@string/app_field_9"
                android:textColor="@color/colorTextBlack"
                android:textSize="10sp" />

            <Spinner
                android:id="@+id/spinnerMethods"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonRun"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1.5"
                android:background="@drawable/button_style_1"
                android:gravity="center"
                android:text="@string/app_field_6"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:textSize="10sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/myLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_style_1"
            android:padding="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>